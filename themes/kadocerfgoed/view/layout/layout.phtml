      $("#showSearch").addClass("is-hidden");
      $(".search-menu-close").removeClass("is-hidden");
    });

    $(".search-menu-close").click(function() {
       $(".search-menu").removeClass("is-active");
       $("#showSearch").removeClass("is-hidden");
